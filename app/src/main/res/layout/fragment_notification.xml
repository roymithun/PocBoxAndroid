<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topics.notifications.NotificationFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_blue_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btn_create_blue_notification_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Blue Notification Channel" />

            <Button
                android:id="@+id/btn_show_blue_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Blue Notification" />

            <Button
                android:id="@+id/btn_open_blue_notification_channel_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open the Blue channel settings" />

            <Button
                android:id="@+id/btn_delete_blue_notification_channel_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete the Blue channel settings" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_red_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_blue_notifications">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btn_create_red_notification_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Red Notification Channel" />

            <Button
                android:id="@+id/btn_show_red_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Red Notification" />

            <Button
                android:id="@+id/btn_open_red_notification_channel_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open the Red channel settings" />

            <Button
                android:id="@+id/btn_delete_red_notification_channel_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete the Red channel settings" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>